
pipeline {
    agent any

    environment {
        // Define the HTML content directly in the environment section
        HTML_CONTENT = '''<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Hello Output</title>
</head>
<body>
    <h1>Hello</h1>
    <p>Open this page in your browser: <a href="${BUILD_URL}html_output/index.html" target="_blank">Hello Output</a></p>
</body>
</html>
'''
    }

    stages {
        stage('Write HTML') {
            steps {
                script {
                    // Create the html_output directory if it doesn't exist
                    sh 'mkdir -p html_output'
                    
                    // Write the HTML content to a file
                    writeFile file: 'html_output/index.html', text: HTML_CONTENT
                }
            }
        }

        stage('Serve HTML') {
            steps {
                script {
                    // Archive HTML output for access
                    archiveArtifacts artifacts: 'html_output/**', allowEmptyArchive: true
                }
            }
        }
    }
}
