pipeline {
    agent any

    environment {
        // Define the HTML content directly in the environment section
        HTML_CONTENT = '''<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Hello Output</title>
</head>
<body>
    <h1>Hello</h1>
</body>
</html>
'''
    }

    stages {
        stage('Display Hello') {
            steps {
                script {
                    // Log the HTML content
                    echo "Full HTML Content:\n${HTML_CONTENT}"
                    
                    // Extract and display the "Hello" message
                    if (HTML_CONTENT.contains("<h1>Hello</h1>")) {
                        echo "Extracted Message: Hello"
                    } else {
                        error "The HTML content does not contain the expected 'Hello' message."
                    }
                }
            }
        }
    }
}
