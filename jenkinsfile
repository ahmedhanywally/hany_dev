pipeline {
    agent any

    environment {
        HTML_CONTENT = '''<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Hello Output</title>
</head>
<body>
    <h1>Hello</h1>
</body>
</html>
'''
    }

    stages {
        stage('Write HTML') {
            steps {
                script {
                    writeFile file: 'index.html', text: HTML_CONTENT
                }
            }
        }

        stage('Archive HTML') {
            steps {
                archiveArtifacts artifacts: 'index.html', allowEmptyArchive: true
            }
        }

        stage('Instruction') {
            steps {
                echo "HTML page generated. Download and open 'index.html' to view the content."
            }
        }
    }
}
